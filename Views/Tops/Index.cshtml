@model IEnumerable<ndomitio.github.io.Models.Top>

@{
    ViewBag.Title = "Index";
}
<link href="~/TopsIndex.css" rel="stylesheet" />

<div class="navbar navbar-inverse navbar-fixed-top" style="background-color:black;">
    <div class="container" style="display:flex; justify-content:center;">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Create", "Create", "Tops")</li>
                <li>@Html.ActionLink("Bottoms", "Index", "Bottoms")</li>
                <li>@Html.ActionLink("Shoes", "Index", "Shoes")</li>
                <li>@Html.ActionLink("Accessories", "Index", "Accessories")</li>
                <li>@Html.ActionLink("Outfits", "Index", "Outfits")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
            </ul>
        </div>
    </div>
</div>
@*<h2 style="margin-top:12vh;">Index</h2>*@

@*<head>
        <meta name="viewport" content="width=device-width">
    </head>*@

@*<div class="wrap">*@
<nav>
    <ul class="primary" style="display:flex; justify-content:center; margin-top:40%">
        @foreach (var item in Model)
        {
            <li>
                <a href="">@Html.DisplayFor(modelItem => item.TopName)</a>
                <ul class="sub" style="background-color:#DAA48B;color:#7E6C68;
">
                    <li>
                        <a href="" style="background-color:#DAA48B;color:#7E6C68;
">
                            @Html.DisplayNameFor(model => model.TopColor)
                            :
                            @Html.DisplayFor(modelItem => item.TopColor)
                        </a>
                    </li>
                    <li>
                        <a href="" style="background-color:#DAA48B;color:#7E6C68;
">
                            @if (item.TopOccasion == null)
                            { }
                            else
                            {@Html.DisplayNameFor(model => model.TopOccasion)
                            @: :
                            @Html.DisplayFor(modelItem => item.TopOccasion);
                        }
                        </a>
                    </li>
                    <li>
                        <a><img style="width:100px;" src="@Html.DisplayFor(modelItem => item.TopPhoto)" /></a>
                    </li>
                    <li>
                        <a>
                            @Html.ActionLink("Edit", "Edit", new { id = item.TopID })
                            @Html.ActionLink("Details", "Details", new { id = item.TopID })
                            @Html.ActionLink("Delete", "Delete", new { id = item.TopID })
                        </a>
                    </li>
                </ul>
            </li>
        }
    </ul>
</nav>