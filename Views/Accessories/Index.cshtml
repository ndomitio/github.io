<nav>
    <ul class="primary" style="display:flex; justify-content:center;">
        @foreach (var item in Model)
        {
            <li>
                <a href="">@Html.DisplayFor(modelItem => item.AccessoryName)</a>
                <ul class="sub" style="background-color:black;color:#FFEB01;">
                    <li>
                        <a href="" style="background-color:black;color:#FFEB01;">
                            @Html.DisplayNameFor(model => model.AccessoryName)
                            :
                            @Html.DisplayFor(modelItem => item.AccessoryName)
                        </a>
                    </li>
                    <li>
                        <a href="" style="background-color:black;color:#FFEB01;
">
                            @if (item.AccessoryOccasion == null)
                            { }
                            else
                            {@Html.DisplayNameFor(model => model.AccessoryOccasion)
                            @: :
                            @Html.DisplayFor(modelItem => item.AccessoryOccasion);
                        }
                        </a>
                    </li>
                    <li>
                        <a><img style="width:100px;" src="@Html.DisplayFor(modelItem => item.AccessoryPhoto)" /></a>
                    </li>
                    <li>
                        <a>
                            @Html.ActionLink("Edit", "Edit", new { id = item.AccessoryID })
                            @Html.ActionLink("Details", "Details", new { id = item.AccessoryID })
                            @Html.ActionLink("Delete", "Delete", new { id = item.AccessoryID })
                        </a>
                    </li>
                </ul>
            </li>
        }
    </ul>
</nav>